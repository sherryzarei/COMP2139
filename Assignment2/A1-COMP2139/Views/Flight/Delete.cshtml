@model Flight
@{
    // Razor Block
    ViewData["Title"] = "Delete Flight";
}
<div style="padding: 20px 80px">

    <h2>@ViewData["Title"]</h2>

    <h3>Are you sure you want to delete this flight?</h3>

    <div>
        <h4>Flight</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Airline)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Airline)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Departure)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Departure)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Arrival)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Arrival)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>

        </dl>
    </div>
    <form asp-action="DeleteConfirmed" method="post">
        @Html.HiddenFor(model => model.FlightId)

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </form>
</div>