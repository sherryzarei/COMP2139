@model A1_COMP2139.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h1>Delete Car</h1>

<h3>Are you sure you want to delete this car?</h3>
<div>
    <div class="display-field">
        <strong>Rental Company:</strong> @Model.RentalCompany
    </div>
    <div class="display-field">
        <strong>Manufacturer:</strong> @Model.Manufacturer
    </div>
    <div class="display-field">
        <strong>Model:</strong> @Model.Model
    </div>
    <div class="display-field">
        <strong>Year:</strong> @Model.Year
    </div>
    <div class="display-field">
        <strong>Price:</strong> @Model.Price
    </div>
    <div class="display-field">
        <strong>Availability:</strong> @Model.Availability
    </div>
    @if (Model.ImageName != null)
    {
        <div class="display-field">
            <img src="@Url.Content("~/Images/Cars/" + Model.ImageName)" width="150" alt="Car Image" />
        </div>
    }

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="CarId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
