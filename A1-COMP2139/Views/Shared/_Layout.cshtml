<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - A1-COMP_2139</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/site.js" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/flight.jpeg" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/car.jpeg" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/hotelImage.jpeg" asp-append-version="true" />
    <link rel="stylesheet" href="~/A1-COMP_2139" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
    </style>
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">A1-COMP_2139</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i>
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Flight" asp-action="Index">
                                <i class="fa-solid fa-plane-circle-check"></i>
                                Flights
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Hotel" asp-action="Index">
                                <i class="fa-solid fa-hotel"></i>
                                Hotels
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Index">
                                <i class="fa-solid fa-car"></i>
                                Rental Cars
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fa-solid fa-circle-info"></i>
                                About
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="search-form">
        <form class="d-flex" asp-controller="Home" asp-action="GeneralSearch" method="get">
            <input class="form-control" type="text" placeholder="Search..." name="searchString" />
            <select class="form-control btn btn-sm btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" name="searchType" type="button" id="selectionbtn">
                <option value="Flight">Flights</option>
                <option value="Hotel">Hotels</option>
                <option value="Car">Cars</option>
            </select>
            <button class="btn btn-outline-success form-control" type="submit">Search</button>
        </form>
    </div>
    <hr />
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2024 - A1-COMP_2139 - <a asp-area="" asp-controller="Home" asp-action="About">
                Ramtin Abolfazli - 101419226,
                Sherry Zarei - 101274382,
                Darya Mansouri - 101394900
            </a>
        </div>
    </footer>
</body>
</html>
    
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/css/site.css" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)