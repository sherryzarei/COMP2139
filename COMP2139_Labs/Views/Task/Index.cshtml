@model IEnumerable<ProjectTask>

@{
    ViewData["Title"] = "Tasks List";
    bool searchPerformed = ViewData["SearchPerformed"] as bool? ?? false;
    string searchString = ViewData["SearchString"] as string;
}

<h2>@ViewData["Title"]</h2>
<table class="table">
    <thead>
        <tr>
            <th>Task ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Project ID</th>
            <th>Action</th> <!-- Column fro action buttons Details, edit, delete -->
        </tr>
    </thead>

    <tbody>

        @foreach (var  task in Model) //as being (var project in List<Project>)
        {
            <tr>
                <th>@task.ProjectTaskId</th>
                <th>@task.Title</th>
                <th>@task.Description</th>
                <th>@task.Description</th>
                <th>@task.ProjectId</th>
                <td>
                    <a asp-action="Details" asp-route-id="@task.ProjectTaskId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@task.ProjectTaskId" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@task.ProjectTaskId" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>

<!--Button to create a new task-->
<a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary">Create New Task</a>
<a asp-controller="Project" asp-action="Index" class="btn btn-primary">Back to Projects</a>