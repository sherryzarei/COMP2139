@model ProjectTask //specifies an empty project

@{
    //Razor Block
    ViewData["Title"] = "Create Task";
}

<h2>Create Project</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @Html.HiddenFor(model => model.ProjectId)

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>    <!--asp-for validation the names of the attributes  -->
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-warning">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}